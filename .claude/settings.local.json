{
  "permissions": {
    "allow": [
      "mcp__notion__notion-update-page",
      "mcp__notion__notion-fetch",
      "WebSearch",
      "WebFetch(domain:addyosmani.com)",
      "WebFetch(domain:itrevolution.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"npm run typecheck --silent 2>&1 | Select-Object -First 20; exit 0\""
          }
        ]
      }
    ]
  }
}
